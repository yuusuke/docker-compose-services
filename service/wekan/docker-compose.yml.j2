wekan:
  image: mquandalle/wekan
  links: 
    - wekandb
  environment:
    - MONGO_URL=mongodb://wekandb/wekan
    - ROOT_URL=http://192.168.28.229:{{wekan_port}} # ポートは好きなポートに
  ports:
    - {{wekan_port}}:80 # ポートは好きなポートに
  restart: always

wekandb:
  image: mongo
  volumes:
    - {{wekan_home}}/data:/data/db # tmpfsでない位置を指定
    - {{wekan_home}}/configdb:/data/configdb # tmpfsでない位置を指定 
  restart: always
